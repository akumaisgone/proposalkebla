    <script>
        let currentStage = 1;
        let totalPoints = 0;

        function showReward(points, message) {
            const reward = document.createElement('div');
            reward.className = 'reward-notification';
            reward.innerHTML = `
                <h3>LEVEL COMPLETE!</h3>
                <div class="reward-points">+${points} POINTS</div>
                <div style="color: var(--silver); font-size: 1.1em; margin-top: 10px;">${message}</div>
            `;
            document.body.appendChild(reward);

            totalPoints += points;
            document.getElementById('pointsDisplay').textContent = totalPoints;

            setTimeout(() => {
                reward.style.animation = 'rewardPop 0.4s ease reverse';
                setTimeout(() => reward.remove(), 400);
            }, 2000);
        }

        // Memory Game
        function initMemoryGame() {
            const symbols = [':3', ':P', ':(', '>_<', '^_^', 'x_x'];
            const cards = [...symbols, ...symbols].sort(() => Math.random() - 0.5);
            const grid = document.getElementById('memoryGrid');
            
            let flipped = [];
            let matched = 0;

            cards.forEach(symbol => {
                const cell = document.createElement('div');
                cell.className = 'matrix-cell';
                cell.textContent = '?';
                cell.dataset.symbol = symbol;
                
                cell.onclick = function() {
                    if (flipped.length < 2 && !this.classList.contains('flipped') && !this.classList.contains('matched')) {
                        this.classList.add('flipped');
                        this.textContent = symbol;
                        flipped.push(this);

                        if (flipped.length === 2) {
                            if (flipped[0].dataset.symbol === flipped[1].dataset.symbol) {
                                setTimeout(() => {
                                    flipped.forEach(c => c.classList.add('matched'));
                                    matched += 2;
                                    flipped = [];
                                    
                                    if (matched === cards.length) {
                                        setTimeout(() => {
                                            showReward(100, 'memory protocol cleared :3');
                                            setTimeout(() => nextStage(2), 2500);
                                        }, 400);
                                    }
                                }, 400);
                            } else {
                                setTimeout(() => {
                                    flipped.forEach(c => {
                                        c.classList.remove('flipped');
                                        c.textContent = '?';
                                    });
                                    flipped = [];
                                }, 800);
                            }
                        }
                    }
                };
                
                grid.appendChild(cell);
            });
        }

        initMemoryGame();

        function nextStage(stage) {
            document.getElementById(`stage${currentStage}`).classList.remove('active');
            currentStage = stage;
            document.getElementById(`stage${stage}`).classList.add('active');

            if (stage === 2) {
                initCodeSequence();
            } else if (stage === 3) {
                initNoButton();
            }
        }

        // Code Sequence
        function initCodeSequence() {
            const sequence = ['I', 'REALLY', 'REALLY', 'LIKE', 'YOU', 'MAYESHA', ':33'];
            const shuffled = [...sequence].sort(() => Math.random() - 0.5);
            const container = document.getElementById('codeSequence');
            const msgDisplay = document.getElementById('decodedMsg');
            
            let currentIndex = 0;
            let decoded = [];

            shuffled.forEach(word => {
                const block = document.createElement('div');
                block.className = 'code-block';
                block.textContent = word;
                block.dataset.word = word;
                
                block.onclick = function() {
                    if (this.dataset.word === sequence[currentIndex]) {
                        this.classList.add('correct');
                        decoded.push(this.dataset.word);
                        msgDisplay.textContent = '> ' + decoded.join(' ');
                        currentIndex++;
                        
                        setTimeout(() => {
                            this.style.opacity = '0.3';
                            this.style.cursor = 'default';
                        }, 400);
                        
                        if (currentIndex === sequence.length) {
                            setTimeout(() => {
                                showReward(150, 'decoder sequence complete :P');
                                setTimeout(() => nextStage(3), 2500);
                            }, 1000);
                        }
                    }
                };
                
                container.appendChild(block);
            });
        }

        // No button behavior
        function initNoButton() {
            const noBtn = document.getElementById('noBtn');
            let attempts = 0;
            
            noBtn.onmouseover = function() {
                attempts++;
                const terminal = document.querySelector('.terminal-body');
                const terminalRect = terminal.getBoundingClientRect();
                const btnRect = this.getBoundingClientRect();
                
                const maxX = terminalRect.width - btnRect.width - 40;
                const maxY = terminalRect.height - btnRect.height - 40;
                
                const newX = Math.random() * maxX;
                const newY = Math.random() * maxY;
                
                this.style.position = 'absolute';
                this.style.left = newX + 'px';
                this.style.top = newY + 'px';
                this.style.transition = 'all 0.2s ease';
                
                if (attempts >= 3) {
                    this.textContent = 'SAY YES :P';
                }
            };
        }

        function acceptQuery() {
            showReward(250, 'JACKPOT! connection established :33');
            setTimeout(() => nextStage(4), 2500);
        }
    </script>
</body>
